# modes
:: default : notify Window "skhd mode:"
:: tabs : notify Tab "skhd mode:"
:: delwins : notify "Delete Window" "skhd mode:"
:: deltabs : notify "Delete Tab" "skhd mode:"

# changing modes
delwins < cmd + alt - d ; default
delwins < cmd + alt - m ; deltabs
deltabs < cmd + alt - d ; tabs
deltabs < cmd + alt - m ; delwins
default < cmd + alt - d ; delwins
default < cmd + alt - m ; tabs
tabs < cmd + alt - m ; default
tabs < cmd + alt - d ; deltabs

# chrome scripts
default < cmd + alt - c : new_chrome
default < cmd + alt - g : new_chrome "https://github.com/KermitPurple?tab=repositories#your-repos-filter"
default < cmd + alt - n : new_chrome "https://github.com/new#repository_name"
default < cmd + alt - i : new_chrome "https://gmail.com"
tabs < cmd + alt - c : chrome "https://google.com"
tabs < cmd + alt - g : chrome "https://github.com/KermitPurple?tab=repositories#your-repos-filter"
tabs < cmd + alt - n : chrome "https://github.com/new#repository_name"
tabs < cmd + alt - i : chrome "https://gmail.com"
delwins < cmd + alt - c : close_chrome_window
deltabs < cmd + alt - c : close_chrome_tab

# terminal scripts
default < cmd + alt - t : new_window ~
tabs < cmd + alt - t : new_tab ~
delwins < cmd + alt - t : close_iterm_window
deltabs < cmd + alt - t : close_iterm_tab

# spotify scripts
default, tabs < cmd + alt - s : open -aSpotify
delwins, deltabs < cmd + alt - s : osascript -e"quit application \"Spotify\""
